<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <link.fls.swipestack.SwipeStack
        android:id="@+id/swipeStack"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:stack_rotation="10"
        app:stack_size="2"
        android:padding="32dp"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/ivCardLogoEmpty"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tvCardTagLineEmpty"
        android:textSize="@dimen/card_title_size"
        android:text="@string/learn_code_online"
        android:layout_below="@id/ivCardLogoEmpty"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvNoMoreQuestions"
        android:textSize="@dimen/card_title_size"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:text="@string/no_more_questions"
        android:layout_below="@id/tvCardTagLineEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>